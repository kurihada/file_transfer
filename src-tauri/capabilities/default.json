{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "path:default",
        "event:default",
        "app:default",
        "image:default",
        "resources:default",
        "menu:default",
        "tray:default",
        "shell:allow-open",
        "window:default",
        "window:allow-start-dragging",
        "dialog:default",
        "dialog:allow-open",
        "fs:default",
        {
            "identifier": "fs:allow-exists",
            "allow": [{ "path": "$APPDATA/*" }]
        }
    ]
}
